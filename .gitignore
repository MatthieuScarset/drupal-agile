# We use /**/ so you can safely rename the webroot directory 
# from `web` to whatever you need (e.g `web`).

# Ignore directories generated by Composer
/bin/
/drush/contrib/
/drush/drushrc.php
/vendor/
/**/core/
/**/modules/contrib/
/**/themes/contrib/
/**/profiles/contrib/
/**/libraries/

# Ignore all files in the docroot folder
/**/*.txt
/**/*.php
/**/*.config

# Ignore Drupal Scaffold files
# @see https://github.com/drupal-composer/drupal-scaffold
/**/.csslintrc
/**/.editorconfig
/**/.eslintignore
/**/.eslintrc
/**/.eslintrc.json
/**/.gitattributes
/**/.htaccess
/**/sites/default/default.services.yml
/**/sites/example.sites.php

# Do NOT ignore settings files because we customize them.
# Those files are also exclude from Drupal Scaffold (see composer.json).
# /**/sites/default/default.settings.php
# /**/sites/development.services.yml
# /**/sites/example.settings.local.php

# Ignore sensitive information
/certificates/*.key
/**/sites/*/settings.php
/**/sites/*/settings.local.php
/**/sites/*/salt.txt

# Ignore Drupal's file directory
/**/sites/*/files/

# Ignore SimpleTest multi-site environment.
/**/sites/simpletest

# Ignore files genereated by IDEs
/.idea/
/.vscode/
/.vagrant/

# Ignore dev files
.lando.yml
.drush.yml
*.log

# Ignore local config for dev.
config/local/*.yml

# Ignore files generated by Acquia DevDesktop
/**/sites/*.dd 

# Ignore junk files
.DS_Store
*.css.map
node_modules
bower_modules
